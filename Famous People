CREATE TABLE movies_or_songs (id INTEGER PRIMARY KEY,
    artist_name TEXT,
    song_movie_name TEXT);
    
INSERT INTO movies_or_songs (artist_name, song_movie_name)
VALUES ("Emma Stone", "La La Land");
